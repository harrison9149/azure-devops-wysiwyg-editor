  {
    "name": "Azure DevOps WYSIWYG Editor",
    "version": "1.1",
    "description": "Adding WYSIWYG functionality to Azure DevOps allowing markdown documents to be written in plain text.",
    "permissions": ["activeTab", "declarativeContent", "storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
        "page_action": {
            "default_icon": {
            "16": "images/markdown16.png",
            "32": "images/markdown32.png",
            "48": "images/markdown64.png",
            "128": "images/markdown128.png"
        }
      },
      "icons": {
        "16": "images/markdown16.png",
        "32": "images/markdown32.png",
        "48": "images/markdown64.png",
        "128": "images/markdown128.png"
      },
      "options_page": "options.html",
      "manifest_version": 2
    }